{% extends 'base.html.twig' %}

{% block title %}Gestion du Produit{% endblock %}

{% block body %}
<style>
    .product-form-container {
        max-width: 700px;
        margin: 2em auto;
        padding: 25px;
        background: #f8f1e5; /* Beige clair pour la douceur */
        border-radius: 15px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    .product-form-title {
        text-align: center;
        font-size: 2rem;
        font-weight: bold;
        color: #5a1e1e; /* Bordeaux pour l'√©l√©gance */
        margin-bottom: 20px;
    }

    .product-form-container label {
        font-weight: bold;
        color: #5a1e1e; /* Bordeaux pour l'√©l√©gance */
    }

    .product-form-container .form-control {
        border-radius: 8px;
        padding: 10px;
        border: 2px solid #d4af37; /* Dor√© pour les bordures des champs */
    }

    .product-form-container .form-control:focus {
        border-color: #5a1e1e; /* Bordeaux au focus */
        box-shadow: 0 0 5px rgba(90, 30, 30, 0.5);
    }

    .product-form-container .btn {
        width: 100%;
        font-size: 1.2rem;
        padding: 10px;
        border-radius: 8px;
        background-color: #5a1e1e; /* Bordeaux pour le bouton */
        border-color: #5a1e1e;
        color: white;
    }

    .product-form-container .btn:hover {
        background-color: #7c2a2a; /* Bordeaux plus fonc√© pour le hover */
        border-color: #7c2a2a;
    }

    .product-form-container .btn:focus {
        background-color: #7c2a2a; /* Bordeaux au focus */
        border-color: #7c2a2a;
        box-shadow: 0 0 5px rgba(90, 30, 30, 0.5);
    }

    .mb-3 label {
        color: #495057; /* Gris clair pour la lisibilit√© */
    }
</style>

<div class="product-form-container">
    <h1 class="product-form-title">üì¶ Ajouter / Modifier un Produit</h1>

    {{ form_start(form) }}
        <div class="mb-3">
            {{ form_label(form.name) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.description) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '4'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.price) }}
            {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.category) }}
            {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
        </div>

        {{ form_widget(form.submit, {'attr': {'class': 'btn btn-success mt-3'}}) }}
    {{ form_end(form) }}
</div>
{% endblock %}

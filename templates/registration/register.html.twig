{# templates/registration/register.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card p-4 shadow-lg" style="width: 400px; background-color: #f8f1e5; border-radius: 15px;">
        <h2 class="text-center" style="color: #5a1e1e;">Créer un compte</h2>

        {{ form_start(registrationForm) }}

        {# Ajout du champ CSRF explicitement dans le formulaire, bien que form_start le gère normalement #}
        {{ form_row(registrationForm._token) }}

        <div class="mb-3">
            {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'form-label fw-bold', 'style': 'color: #5a1e1e;'}}) }}
            <div class="input-group">
                <span class="input-group-text" style="background-color: #5a1e1e; color: #f8f1e5;"><i class="fas fa-envelope"></i></span>
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'style': 'border: 2px solid #5a1e1e;', 'placeholder': 'Votre email'}}) }}
            </div>
        </div>

        <div class="mb-3">
            {{ form_label(registrationForm.name, null, {'label_attr': {'class': 'form-label fw-bold', 'style': 'color: #5a1e1e;'}}) }}
            <div class="input-group">
                <span class="input-group-text" style="background-color: #5a1e1e; color: #f8f1e5;"><i class="fas fa-user"></i></span>
                {{ form_widget(registrationForm.name, {'attr': {'class': 'form-control', 'style': 'border: 2px solid #5a1e1e;', 'placeholder': 'Votre nom'}}) }}
            </div>
        </div>

        <div class="mb-3">
            {{ form_label(registrationForm.address, null, {'label_attr': {'class': 'form-label fw-bold', 'style': 'color: #5a1e1e;'}}) }}
            <div class="input-group">
                <span class="input-group-text" style="background-color: #5a1e1e; color: #f8f1e5;"><i class="fas fa-home"></i></span>
                {{ form_widget(registrationForm.address, {'attr': {'class': 'form-control', 'style': 'border: 2px solid #5a1e1e;', 'placeholder': 'Votre adresse'}}) }}
            </div>
        </div>

        <div class="mb-3">
            {{ form_label(registrationForm.password, null, {'label_attr': {'class': 'form-label fw-bold', 'style': 'color: #5a1e1e;'}}) }}
            <div class="input-group">
                <span class="input-group-text" style="background-color: #5a1e1e; color: #f8f1e5;"><i class="fas fa-lock"></i></span>
                {{ form_widget(registrationForm.password, {'attr': {'class': 'form-control', 'style': 'border: 2px solid #5a1e1e;', 'placeholder': 'Votre mot de passe'}}) }}
            </div>
        </div>

        <!-- Bouton principal -->
        <button type="submit" class="btn w-100" style="background-color: #d4af37; border: none;">
            <i class="fas fa-user-plus"></i> S'inscrire
        </button>

        {{ form_end(registrationForm, {'render_rest': false}) }}

        <p class="mt-3 text-center" style="color: #5a1e1e;">
            Déjà inscrit ? <a href="{{ path('app_login') }}" style="color: #d4af37;">Se connecter</a>
        </p>
    </div>
</div>
{% endblock %}

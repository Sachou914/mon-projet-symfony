{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card p-4 shadow-lg" style="width: 400px; background-color: #f8f1e5; border-radius: 15px;">
        <h2 class="text-center" style="color: #5a1e1e;">Connexion</h2>
        
        {% if error %}
            <div class="alert alert-danger text-center">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <form method="post">
            <div class="mb-3">
                <label for="inputEmail" class="form-label" style="color: #5a1e1e;">Email</label>
                <div class="input-group">
                    <span class="input-group-text" style="background-color: #5a1e1e; color: #f8f1e5;"><i class="fas fa-envelope"></i></span>
                    <input type="email" name="email" id="inputEmail" class="form-control" value="{{ last_username }}" placeholder="Email" required autofocus style="border: 2px solid #5a1e1e;">
                </div>
            </div>

            <div class="mb-3">
                <label for="inputPassword" class="form-label" style="color: #5a1e1e;">Mot de passe</label>
                <div class="input-group">
                    <span class="input-group-text" style="background-color: #5a1e1e; color: #f8f1e5;"><i class="fas fa-lock"></i></span>
                    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe" required style="border: 2px solid #5a1e1e;">
                </div>
            </div>

            <button class="btn w-100" type="submit" style="background-color: #d4af37; border: none;">
                <i class="fas fa-sign-in-alt"></i> Connexion
            </button>

            <p class="mt-3 text-center" style="color: #5a1e1e;">
                Pas encore inscrit ? <a href="{{ path('app_register') }}" style="color: #d4af37;">Cr√©er un compte</a>
            </p>
        </form>
    </div>
</div>
{% endblock %}
